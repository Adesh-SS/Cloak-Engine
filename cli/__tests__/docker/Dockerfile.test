# Test Dockerfile for CloakScan CLI
# Used for testing CloakScan in various Docker environments

FROM node:lts-alpine

# Install build dependencies required for native modules
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    pkgconfig \
    cairo-dev \
    pango-dev \
    libjpeg-turbo-dev \
    giflib-dev \
    pixman-dev \
    freetype-dev \
    build-base \
    git

# Set working directory
WORKDIR /workspace

# Set environment variables for CloakScan
ENV CLOAKSCAN_HOME=/tmp/cloakscan
ENV NODE_ENV=test

# Default command (can be overridden)
CMD ["sh"]

